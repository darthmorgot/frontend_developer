header.header.container
  div.header__top.header-top
    case namePage
      when 'Home': a.header__logo.logo: img(src=require('../../images/logo.svg') width="145" height="36" alt="Логотип интернет-магазина Девайс.")
      when 'Catalog': a.header__logo.logo(href="../index.html"): img(src=require('../../images/logo.svg') width="145" height="36" alt="Логотип интернет-магазина Девайс.")

  div.header__main.header-main
    form.form-search.header-main__form-search(action="https://echo.htmlacademy.ru" method="post")
      label(for="search")
      input#search.form-search__input(type="search" name="search" placeholder="Текст поиска")
      span.form-search__icon
      button.form-search__btn(type="submit") Найти
    div.header-main__user
      case namePage
        when 'Home': +auth-list("Войти")
        when 'Catalog': +auth-list("Коля Петухов", "Выйти")
    div.header-main__menu
      a.header-main__link.header-main__link--icon-sort(href="#") Сравнить
      a.header-main__link.header-main__link--icon-cart(href="#") Корзина
        span.header-main__counter 2
      include popup-cart

  div.header__nav.nav
    div.nav__wrapper-btn-list
      button.nav__btn.nav__btn--open.font-raleway Каталог товаров
      div.nav__wrapper-list
        ul.nav__list
          li.nav__item.nav__item--left-column
            a.nav__link(href="#") Виртуальная реальность
          li.nav__item.nav__item--left-column
            case namePage
              when 'Home': a.nav__link(href="pages/catalog.html") Моноподы для селфи
              when 'Catalog': a.nav__link.nav__link--current(href="pages/catalog.html") Моноподы для селфи
          li.nav__item.nav__item--left-column
            a.nav__link(href="#") Экшн-камеры
          li.nav__item.nav__item--middle-column
            a.nav__link(href="#") Фитнес-браслеты
          li.nav__item.nav__item--middle-column
            a.nav__link(href="#") Умные часы
          li.nav__item.nav__item--right-column
            a.nav__link(href="#") Квадрокоптеры
    ul.nav__services.font-raleway
      li.nav__service-item
        a.nav__service-link(href="#") Доставка
      li.nav__service-item
        a.nav__service-link(href="#") Гарантия
      li.nav__service-item
        a.nav__service-link(href="#") Контакты
