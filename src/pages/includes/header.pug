header.header
  div.header-top.header__top
    case namePage
        when 'Home': a.logo.header__logo: img(src="" alt="Логотип интернет-магазина Девайс")
        when 'Catalog': a.logo.header__logo(href="../index.html"): img(src="" alt="Логотип интернет-магазина Девайс")
  div.header-main.header__main
    form.form-search.header__form-search(action="https://echo.htmlacademy.ru" method="post")
      input.form-search__input(type="text" name="search" placeholder="Текст поиска")
      button.form-search__btn(type="submit") Найти
    div.header-main__user
      span.header-main__icon
      case namePage
        when 'Home': +auth-list("Войти")
        when 'Catalog': +auth-list("Коля Петухов", "Выйти")
    div.header-main__menu
      a.header-main__link(href="#") Сравнить
      a.header-main__link(href="#") Корзина
        span 2
  div.nav.header__nav
    div.nav__catalog
      ul.nav__list
        li.nav__item
          a(href="#") Виртуальная реальность
        li.nav__item
          a(href="#") Моноподы для селфи
        li.nav__item
          a(href="#") Экшен-камеры
        li.nav__item
          a(href="#") Фитнес-браслеты
        li.nav__item
          a(href="#") Умные часы
        li.nav__item
          a(href="#") Квадрокоптеры
    div.nav__services
      a(href="#") Доставка
      a(href="#") Гарантия
      a(href="#") Контакты
